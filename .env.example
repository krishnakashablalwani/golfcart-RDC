# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/
DB_NAME=golfcart_face_recognition

# GPU/CPU Toggle (0=CPU, 1=GPU)
USE_GPU=0

# Backend Selection (1=InsightFace [RECOMMENDED], 0=DeepFace [requires TensorFlow])
USE_INSIGHTFACE=1
INSIGHTFACE_MODEL=r100

# Camera Configuration (High Resolution)
CAMERA_INDEX=0
CAMERA_WIDTH=1920
CAMERA_HEIGHT=1080
CAMERA_FPS=30

# Face Recognition Settings (LOCAL FALLBACK)
RECOGNITION_THRESHOLD=0.5
MIN_FACE_SIZE=80
SAMPLES_PER_STUDENT=15
LOCAL_CONFIDENCE_THRESHOLD=0.95
LOCAL_DISTANCE_THRESHOLD=0.30

# Detection Settings
DETECTION_COOLDOWN_SECONDS=30
PROCESS_EVERY_N_FRAMES=2

# File Paths
EXCEL_FILE=Student information.xlsx
DEPARTMENTS_FILE=departments.txt
SAMPLES_DIR=Samples
DETECTIONS_DIR=Detections

# Email Configuration (Optional - for notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SENDER_EMAIL=your_email@gmail.com
SENDER_PASSWORD=your_app_password
HOD_EMAIL=hod@college.edu
PRINCIPAL_EMAIL=principal@college.edu

# Logging
LOG_LEVEL=INFO
LOG_FILE=golfcart_recognition.log
